# https://editorconfig.org/

root = true

[*]
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true
end_of_line = lf
charset = utf-8
block_comment_start = /*
block_comment = *
block_comment_end = */

[*.{json,yml}]
indent_size = 2

[*.neon]
indent_style = tab

[Makefile]
indent_style = tab
